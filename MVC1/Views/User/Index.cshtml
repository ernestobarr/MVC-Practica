<!--//Como recive una vista un modelo?-->
@model List <MVC1.Models.TableViewModels.UserTableViewModel>

@{
	ViewBag.Title = "Index";
}

<h2>Usuarios</h2>
<div class="row">
	<div class="col-md-12">
		<input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="Agregar"/>
	</div>

</div>

<br />


<div class="row">
	<div class="col-lg-12">
		<table class="table table-bordered" >
			<tr>
				<th>#</th>
				<th>Email</th>
				<th>Edad</th>
			</tr>
			@foreach (var oElemento in Model)
			{
            <tr>
                <td>@oElemento.Id</td>
                <td>@oElemento.Email</td>
                <td>@oElemento.Edad</td>
                <!--Hoy-->
                <td>
                    <input onclick="jsDelete(@oElemento.Id);" type="button" value="Eliminar" class="btn btn-danger" />
                </td>
                <td>
                    <input onclick="document.location.href='@Url.Content("~/User/Edit/"+oElemento.Id)'" type="button" value="Editar" class="btn btn-default" />
                </td>
            </tr>
				
			}

		</table>
	</div>
</div>

<script>
    function jsDelete() {

    }
</script>
